#!/bin/bash
set -euo pipefail

{{ template "script_header.sh" . }}
source_env_file ~/.env

log_info "Installing Kubernetes Krew plugins..."

# Ensure krew is installed first
if ! command -v kubectl krew &> /dev/null; then
  log_warning "Krew is not present. Ensure it is installed first before installing plugins!"
  return
fi

# Install plugins from the list
while read -r plugin; do
  if [[ -n "$plugin" && ! "$plugin" =~ ^# ]]; then
    kubectl krew install "$plugin"
  fi
done < {{ .chezmoi.sourceDir }}/krew-plugins.txt

log_success "Krew plugins installed successfully!"
echo "-------------------------------------------------------------------------------------------"
